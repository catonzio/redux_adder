import 'json';
import '../app/app_state.dart';
import 'package:redux/redux.dart';

class Prova3ViewModel {

	final Prova3State state;
	final Function(int)? updateParam1;
	final Function(bool)? updateParam2;
	final Function(List<int>)? updateList;

	static Prova3ViewModel fromStore(Store<AppState> store) {
		return Prova3ViewModel(
			state: store.state.pagesState.prova3State,
			
			updateParam1: (int value) =>
          store.dispatch(UpdateProva3Param1Action(value)),
			updateParam2: (bool value) =>
          store.dispatch(UpdateProva3Param2Action(value)),
			updateList: (List<int> value) =>
          store.dispatch(UpdateProva3ListAction(value)),
		);
	}

	Prova3ViewModel({
		required this.state,
		this.updateParam1,
		this.updateParam2,
		this.updateList,
	});

	factory Prova3ViewModel.initial() {
		return Prova3ViewModel(
			state: Prova3State.initial(),
		);
	}

	factory Prova3ViewModel.fromJson(Map<String, dynamic> json) {
		return Prova3ViewModel(
			state: Prova3State.fromJson(json['state']),
		);
	}

	Map<String, dynamic> toJson() => {
		'state': state.toJson(),
	};

	@override
	bool operator ==(Object other) => 
		identical(this, other) || 
		other is Prova3ViewModel && 
		state == other.state;

	@override
	int get hashCode => super.hashCode ^ 
		state.hashCode;
}